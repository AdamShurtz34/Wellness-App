
MDScreen:
    MDNavigationLayout:
        ScreenManager:
            Screen:
                BoxLayout:
                    orientation: "vertical"

                    MDTopAppBar:
                        title: "Wellness App"
                        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]

                    ScrollView:
                        BoxLayout:
                            orientation: 'vertical'
                            size_hint_y: None
                            height: self.minimum_height
                            padding: dp(16)

                            MDLabel:
                                text: "Quote of the Day"
                                size_hint_y: None
                                height: self.texture_size[1]
                                halign: "center"
                                padding: dp(16)

                            MDCard:
                                size_hint: None, None
                                size: Window.width - dp(30), "180dp"
                                pos_hint: {"center_x": .5}
                                elevation: 3
                                padding: "8dp"
                                spacing: "8dp"
                                radius: [15,]
                                md_bg_color: 94/255,104/255,112/255,1 # dark grey

                                MDLabel:
                                    text: app.get_quote()
                                    halign: "center"
                                    theme_text_color: "Custom"
                                    text_color: 59/255, 209/255, 199/255, 1 # light Teal color
                                    font_style: "Body1"

        MDNavigationDrawer:
            id: nav_drawer

            BoxLayout:
                orientation: "vertical"

                MDLabel:
                    text: "Menu"
                    size_hint_y: None
                    height: "40dp"

                OneLineListItem:
                    text: "Home"
                    on_release: app.menu_home()
                OneLineListItem:
                    text: "Fitness"
                    on_release: app.menu_fitness()
                OneLineListItem:
                    text: "Nutrition"
                    on_release: app.menu_nutrition()
                OneLineListItem:
                    text: "Enneagram"
                    on_release: app.menu_enneagram()

                Widget:

                OneLineListItem:
                    text: "Settings"
                    on_release: app.menu_settings()
                OneLineListItem:
                    text: "Logout"
                    on_release: app.menu_logout()