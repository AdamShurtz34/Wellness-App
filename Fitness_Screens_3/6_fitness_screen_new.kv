
MDScreen:
    MDNavigationLayout:
        ScreenManager:
            Screen:
                BoxLayout:
                    orientation: "vertical"

                    MDTopAppBar:
                        title: "Wellness App"
                        left_action_items: [["menu", lambda x: nav_drawer.set_state("open")]]

                    ScrollView:
                        BoxLayout:
                            orientation: 'vertical'
                            size_hint_y: None
                            height: self.minimum_height
                            padding: dp(16)
                            spacing: dp(25)  # Add spacing between widgets

                            MDLabel:
                                text: "Start a New Workout Program"
                                size_hint_y: None
                                height: self.texture_size[1]
                                halign: "center"
                                padding: dp(16)


                            ScrollView:
                                do_scroll_x: True
                                do_scroll_y: True
                                size_hint: (1, None)  # Allow the ScrollView to take up all available width, but set height manually
                                height: "200dp"  # Set a specific height for the ScrollView
                                MDCard:
                                    id: std_templates_container
                                    size_hint_y: None
                                    height: "180dp"
                                    pos_hint: {"center_x": .5}
                                    elevation: 2
                                    padding: "8dp"
                                    spacing: "15dp"
                                    radius: [15,]
                                    md_bg_color: 151/255,161/255,170/255,1  # light grey color


                            MDCard:
                                size_hint: None, None
                                size: Window.width, "360dp"
                                pos_hint: {"center_x": .5}
                                elevation: 2
                                padding: "8dp"
                                spacing: "15dp"
                                radius: [15,]
                                md_bg_color: 151/255,161/255,170/255,1  # light grey color
                                ScrollView:
                                    BoxLayout:
                                        id: user_custom_fitness_templates_display
                                        orientation: "vertical"
                                        padding: "8dp"
                                        spacing: "8dp"
                                        MDLabel:
                                            text: "Custom Templates"
                                            size_hint_y: None
                                            height: self.texture_size[1]
                                            halign: "center"
                                            padding: dp(16)

                            MDCard:
                                size_hint: None, None
                                size: Window.width, "360dp"
                                pos_hint: {"center_x": .5}
                                elevation: 2
                                padding: "8dp"
                                spacing: "15dp"
                                radius: [15,]
                                md_bg_color: 151/255,161/255,170/255,1  # light grey color
                                ScrollView:
                                    BoxLayout:
                                        id: user_workout_history_display
                                        orientation: "vertical"
                                        padding: "8dp"
                                        spacing: "8dp"
                                        MDLabel:
                                            text: "Workout Program History"
                                            size_hint_y: None
                                            height: self.texture_size[1]
                                            halign: "center"
                                            padding: dp(16)





        MDNavigationDrawer:
            id: nav_drawer

            BoxLayout:
                orientation: "vertical"

                MDLabel:
                    text: "Menu"
                    size_hint_y: None
                    height: "40dp"

                OneLineListItem:
                    text: "Home"
                    on_release: app.menu_home()
                OneLineListItem:
                    text: "Fitness"
                    on_release: app.menu_fitness()
                OneLineListItem:
                    text: "Nutrition"
                    on_release: app.menu_nutrition()
                OneLineListItem:
                    text: "Enneagram"
                    on_release: app.menu_enneagram()

                Widget:

                OneLineListItem:
                    text: "Settings"
                    on_release: app.menu_settings()
                OneLineListItem:
                    text: "Logout"
                    on_release: app.menu_logout()